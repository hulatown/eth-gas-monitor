{
  "manifest_version": 3,
  "name": "Ethereum Realtime Gas Price and Burner",
  "version": "0.1.0",
  "description": "Ethereum real-time gas price and gas burner (data from ultrasound.money)",
  "icons": {
    "16":  "./icons/eth-gas-monitor-16x16.png",
    "32":  "./icons/eth-gas-monitor-32x32.png",
    "48":  "./icons/eth-gas-monitor-48x48.png",
    "128": "./icons/eth-gas-monitor-128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ETH Gas Monitor",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage", "activeTab", "scripting", "alarms"
  ]
}